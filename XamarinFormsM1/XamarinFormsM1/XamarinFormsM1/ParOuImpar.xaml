<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFormsM1.ParOuImpar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Determina se um número é par ou ímpar"/>
            <Entry x:Name="etValor" Keyboard="Numeric" Placeholder="Digite um número" />
            <Button x:Name="btExecutar" Text="Executar"/>
            <Label x:Name="lbResposta"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>